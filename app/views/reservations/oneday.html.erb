

  <%= @date %>

    
    <table class="day-table" >
            <tr>
              <th>会場</th><th>時間</th><th>団体名</th><th>用途</th>
            </tr>
          <% @reservations.each do |reservation| %>
            <% if reservation.time <= "13:59" %>
              <tr>
                <th><%= reservation.room.name %></th><td><%= reservation.time.strftime("%H:%M〜") %></td><td><%= reservation.group_name %></td><td><%= reservation.use %></td>
              </tr>
            <% end %>
          <% end %>
   </table>

